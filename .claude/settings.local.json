      "Bash(brew list:*)",
      "Bash(mkdir:*)",
      "Bash(uv:*)",
      "Bash(mv:*)",
      "Bash(grep:*)",
      "Bash(npm:*)",
      "Bash(ls:*)",
      "Bash(cd:*)",
      "Bash(cp:*)",
      "Bash(rm:*)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(pwd)",
      "Bash(git:*)",
      "Write",
      "Edit",
      "Bash(chmod:*)",
      "Bash(touch:*)",
      "Bash(which:*)",
      "Bash(whereis:*)",
      "Bash(env)",
      "Bash(pip:*)",
